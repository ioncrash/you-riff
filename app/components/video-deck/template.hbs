    <div class="row">
        <div class="col-md-8">
          {{ember-youtube ytid=video.ytid timeChanged='timeChanged'}}
        </div>
        <div class="col-md-4">
          <div>
            {{chat-box video=video currentTime=currentTime}}
            <form {{action 'submit'}}>
              {{textarea placeholder="Type your riff here!" class="create-riff-box"}}
              <button class="btn btn-submit create-riff-btn">Riff</button>
            </form>
          </div>
        </div>
    </div>
    <div class="row"></div>
</div>


